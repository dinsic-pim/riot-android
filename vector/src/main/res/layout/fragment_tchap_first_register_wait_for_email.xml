<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tchap_first_register_wait_for_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="22dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingStart="22dp">

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_caution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/tchap_register_wait_for_email_caution"
        android:textColor="@color/vector_fuchsia_color"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/tchap_register_wait_for_email_title"
        android:textColor="@color/tchap_text_color_light"
        android:textSize="23.8sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tchap_register_wait_for_email_caution" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:textColor="@color/tchap_gray_86"
        android:textSize="12.5sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tchap_register_wait_for_email_title"
        tools:text="jerome.martin@test.gouv.fr" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/tchap_register_wait_for_email_subtitle"
        android:textColor="@color/tchap_text_color_light"
        android:textSize="17.5sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tchap_register_wait_for_email_email" />

    <ProgressBar
        android:id="@+id/fragment_tchap_register_wait_for_email_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toTopOf="@id/fragment_tchap_register_wait_for_email_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_tchap_register_wait_for_email_subtitle"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/tchap_register_wait_for_email_no_email"
        android:textColor="@color/tchap_text_color_light"
        android:textSize="17.5sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
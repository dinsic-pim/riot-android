<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messagesAdapter_favourite_message_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/messagesAdapter_favourite_message_header_top_margin"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messagesAdapter_favourite_message_header_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/messagesAdapter_favourite_message_header_date"
            android:layout_toLeftOf="@+id/messagesAdapter_favourite_message_header_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/vctr_default_text_hint_color"
            android:textStyle="bold"
            tools:text="Room name" />

        <TextView
            android:id="@+id/messagesAdapter_favourite_message_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?attr/vctr_default_text_hint_color"
            tools:text="Today" />
    </RelativeLayout>


    <View
        android:id="@+id/messagesAdapter_favourite_message_header_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="8dp" />
</LinearLayout>

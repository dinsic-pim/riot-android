<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="fr.gouv.tchap.activity.TchapRoomCreationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="14.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_room_creation_avatar"
                    android:layout_width="90dp"
                    android:layout_height="95dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:text="@string/tchap_room_creation_avatar"
                    android:textColor="#124a9d"
                    android:background="@drawable/avatar_mask_hexagon"
                    tools:text="Ajouter \n une photo"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="?attr/default_text_hint_color">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_room_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18.8sp"
                        android:hint="@string/tchap_room_creation_name"
                        android:minHeight="40dp"
                        android:textColor="#858585"
                        tools:text="Nommer le salon"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_public_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tchap_room_creation_public"
                    android:textSize="15sp"
                    android:textColor="#162d58"
                    tools:text="Rendre ce salon privé"/>

                <Switch
                    android:id="@+id/switch_public_private_rooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_public_private_room_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:text="@string/tchap_room_creation_public_private_info"
                android:textSize="12sp"
                android:textColor="#949494"
                tools:text="Un salon public peut être rejoint par n'importe quel membre de la communauté Tchap sous condition qu'il soit accepté."/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/room_creation_spinner_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ProgressBar
                android:id="@+id/listView_spinner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible"/>
        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

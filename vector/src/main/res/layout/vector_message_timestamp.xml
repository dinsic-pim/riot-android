<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/messagesAdapter_favourite_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_material_star_black"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/messagesAdapter_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondary"
        android:textSize="12sp"
        tools:text="11:32" />

    <View
        android:id="@+id/messagesAdapter_action_anchor"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:contentDescription="@string/actions" />

</merge>

